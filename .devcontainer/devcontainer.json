// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Python 3",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.debugpy",
				"ms-python.pylint",
				"ms-python.autopep8",
				"ms-python.vscode-pylance"
			],
			"settings": {
				"python.defaultInterpreterPath": "/usr/local/bin/python",
				"python.analysis.extraPaths": ["src"],

				// Tell the Python extension to use Pylance
				"python.languageServer": "Pylance",
		
				// Pylance configuration (optional â€“ choose your strictness)
				"python.analysis.typeCheckingMode": "basic",
				"python.analysis.autoSearchPaths": true,
		
				// Enable linting and select pylint
				"python.linting.enabled": true,
				"python.linting.pylintEnabled": true,
		
				// (Optional) pass extra args to pylint
				"python.linting.pylintArgs": [
				  "--disable=C0114",  // e.g. disable missing-module-docstring
				  "--max-line-length=88"
				]
			}
		}
	},
	"postCreateCommand": "pip install --upgrade pip && pip install -r requirements.txt && bash .devcontainer/add-cli-alias-to-path.sh",
	"containerEnv": {
		"PYTHONPATH": "/workspaces/GitWit/src:${PYTHONPATH}"
	},

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "pip3 install --user -r requirements.txt",

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
